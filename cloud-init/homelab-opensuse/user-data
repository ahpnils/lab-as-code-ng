#cloud-config

fqdn: ${hostname}
manage_etc_hosts: true

users:
  - name: ${user_name}
    uid: 5001
    # gid does not exist
    # gid: 5001
    primary_group: ${user_name}
    groups: users,wheel
    lock_passwd: false
    plain_text_passwd: ${user_password}
    ssh_authorized_keys:
      - ${ssh_pubkey}
    sudo: ALL=(ALL) NOPASSWD:ALL
write_files:
  - path: /etc/sysctl.d/98-swappiness.conf
    content: 'vm.swappiness = 1'
    owner: root:root
    permissions: '0644'

runcmd:
  - sysctl -p /etc/sysctl.d/98-swappiness.conf

packages:
  - bash-completion
  - bind-utils
  - rsync
  - sudo
  - tmux
  - curl
  - vim
  - tcpdump
  - htop
  - btop
  - qemu-guest-agent
  #- fastfetch # not installed because too much deps.

final_message: "${hostname} is ready for action !"
