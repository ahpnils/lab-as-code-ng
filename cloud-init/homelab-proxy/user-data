#cloud-config

fqdn: homelab-proxy.homelab.home.arpa

users:
  - name: ${user_name}
    uid: 5001
    # gid does not exist
    groups: users,wheel
    lock_passwd: false
    plain_text_passwd: ${user_password}
    ssh_authorized_keys:
      - ${ssh_pubkey}
    sudo: ALL=(ALL) NOPASSWD:ALL
write_files:
  - path: /etc/sysctl.d/98-swappiness.conf
    content: 'vm.swappiness = 1'
    owner: root:root
    permissions: '0644'
  - path: /etc/resolv.conf
    owner: root:root
    permissions: '0644'
    content: |
      nameserver 10.99.99.3
  - path: /etc/network/interfaces
    owner: root:root
    permissions: '0644'
    content: |
      auto lo
      iface lo inet loopback

      auto eth0
        iface eth0 inet static
        address 10.99.99.4
        netmask 255.255.255.0
        gateway 10.99.99.2

packages:
  - bash-completion
  - sudo
  - tmux
  - vim
  - squid

runcmd:
  - sysctl -p /etc/sysctl.d/98-swappiness.conf
  - rc-service networking restart
  - sed -i -e 's/^# http_access allow localnet/http_access allow localnet/g' /etc/squid/squid.conf
  - rc-update add squid
  - service squid start


final_message: "homelab-proxy is ready for action !"
