#cloud-config

fqdn: ${hostname}
manage_etc_hosts: true

users:
  - name: ${user_name}
    uid: 5001
    # gid does not exist
    # gid: 5001
    primary_group: ${user_name}
    groups: users,wheel
    lock_passwd: false
    plain_text_passwd: ${user_password}
    ssh_authorized_keys:
      - ${ssh_pubkey}
    sudo: ALL=(ALL) NOPASSWD:ALL
write_files:
  - path: /etc/sysctl.d/98-swappiness.conf
    content: 'vm.swappiness = 1'
    owner: root:root
    permissions: '0644'
  - content: |
      tsflags='nodocs'
      install_weak_deps=False
      fastestmmirror=True
    path: /etc/dnf/dnf.conf
    append: true

bootcmd:
  - dnf config-manager --set-enabled crb
  - dnf install -y https://dl.fedoraproject.org/pub/epel/epel{,-next}-release-latest-9.noarch.rpm

runcmd:
  - sysctl -p /etc/sysctl.d/98-swappiness.conf

packages:
  - bash-completion
  - bind-utils
  - rsync
  - sudo
  - tmux
  - curl
  - vim-enhanced
  - tcpdump
  - htop
  - btop
  - qemu-guest-agent
  - fastfetch

final_message: "${hostname} is ready for action !"
