#cloud-config

fqdn: ${hostname}
manage_etc_hosts: true

users:
  - name: ${user_name}
    shell: /bin/bash
    uid: 5001
    # gid does not exist
    # gid: 5001
    primary_group: ${user_name}
    groups: users,wheel
    lock_passwd: false
    plain_text_passwd: ${user_password}
    ssh_authorized_keys:
      - ${ssh_pubkey}
    sudo: ALL=(ALL) NOPASSWD:ALL

apt:
 sources:
   backports:
     source: "deb http://deb.debian.org/debian bookworm-backports main"
mounts:
  - [ swap, null ]

bootcmd:
  - DEBIAN_FRONTEND=noninteractive apt-get -y remove --purge man-db
  - DEBIAN_FRONTEND=noninteractive apt-get update
  - DEBIAN_FRONTEND=noninteractive apt-get -y install gpg

#runcmd:
#  - sysctl --system

packages:
  - bash-completion
  - rsync
  - sudo
  - tmux
  - curl
  - vim
  - tcpdump
  - htop
  - btop
  - tree
  - lsof
  - linux-image-cloud-amd64
  - apt-transport-https
  - neofetch
  - bind9-dnsutils

#package_update: true
#package_upgrade: true
# Seems to cause issues with runcmd ¯\_(ツ)_/¯
# package_reboot_if_required: true

final_message: "${hostname} is ready for action !"
